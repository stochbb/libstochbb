<?xml version="1.0"?>

<simulation xmlns="http://hmatuschek.github.io/stochbb/simulation-0.0.dtd"
            xmlns:m="http://www.w3.org/1998/Math/MathML">

 <!-- Load definition of exp RV. -->
 <load>exp.xml</load>

 <var id="X1" type="gamma">
  <param name="k"><m:cn>10</m:cn></param>
  <param name="theta"><m:cn>100</m:cn></param>
 </var>

 <var id="X2" type="gamma">
  <param name="k"><m:cn>20</m:cn></param>
  <param name="theta"><m:cn>50</m:cn></param>
 </var>

 <var id="X3" type="exp">
  <param name="lambda"><m:cn>0.01</m:cn></param>
 </var>

 <!-- Assemble the processing chain, result is "response" RV -->
 <var type="chain" id="response" name="X1->X2->X3">
  <var ref="X1"/>  <!-- X1 triggers X2 //-->
  <var ref="X2"/>  <!-- X2 triggers X3 //-->
  <var ref="X3"/>
 </var>

 <!-- Evaluate the PDF of the response as the output -->
 <output from="0" to="4000" steps="1000">
  <var ref="X1"/>
  <var ref="X2"/>
  <var ref="X3"/>
  <var ref="response"/>
 </output>

</simulation>
