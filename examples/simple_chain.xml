<?xml version="1.0"?>

<simulation xmlns="http://github.com/hmatuschek/stochbb/simulation-0.0"
            xmlns:m="http://www.w3.org/1998/Math/MathML">

 <!-- Load definition of exp RV. -->
 <load>exp</load>

 <!-- A fixed processing delay of 100ms -->
 <var id="delay" type="delta">
  <param name="delay"><m:cn>100</m:cn></param>
 </var>

 <!-- Processes the stimulus -->
 <var id="process" type="exp">
  <param name="lambda"><m:cn>0.01</m:cn></param>
 </var>

 <!-- Assemble the processing chain, result is "response" RV -->
 <var id="response" type="chain">
  <ref>delay</ref>  <!-- delay triggers process //-->
  <ref>process</ref>
 </var>

 <!-- Evaluate the PDF of the response as the output -->
 <output from="0" to="700" steps="1000">
  <pdf><ref>response</ref></pdf>
  <pdf><ref>process</ref></pdf>
 </output>

</simulation>
