<?xml version="1.0"?>

<simulation xmlns="http://hmatuschek.github.io/stochbb/simulation-0.0.dtd"
            xmlns:m="http://www.w3.org/1998/Math/MathML">

 <!-- Get 3 iid. Gamma(3,10) distributed RV -->
 <var id="X1" type="gamma">
  <param name="k"><m:cn>2</m:cn></param>
  <param name="theta"><m:cn>10</m:cn></param>
 </var>
 <var id="X2" type="gamma">
  <param name="k"><m:cn>3</m:cn></param>
  <param name="theta"><m:cn>10</m:cn></param>
 </var>
 <var id="X3" type="gamma">
  <param name="k"><m:cn>4</m:cn></param>
  <param name="theta"><m:cn>10</m:cn></param>
 </var>

 <!-- Minimum distribution of X1, X2 and X3 -->
 <var id="min" type="minimum">
  <var ref="X1"/> <var ref="X2"/> <var ref="X3"/>
 </var>

 <!-- Maximum distribution of X1, X2 and X3 -->
 <var id="max" type="maximum">
 <var ref="X1"/> <var ref="X2"/> <var ref="X3"/>
 </var>

 <output from="0" to="200" steps="1000">
  <var ref="X1"/> <var ref="X2"/> <var ref="X3"/> <var ref="min"/> <var ref="max"/>
 </output>
</simulation>
