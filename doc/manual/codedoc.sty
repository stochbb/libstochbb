 \NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{codedoc}[2015/07/12 CodeDoc Package]

\RequirePackage{hyperref}

% typeset as code
\newcommand{\code}[1]{\texttt{#1}}
% typeset class names
\newcommand{\class}[1]{\hyperlink{cls:#1}{\code{#1}}}
% typeset method names
\newcommand{\method}[2]{\hyperlink{meth:#1::#2}{\code{#1}::\code{#2}}}
% typeset function names
\newcommand{\function}[1]{\hyperlink{func:#1}{\code{#1}}}

% declare current class name
\newcommand{\classname}{}

% a class definition
\newenvironment{defclass}[1]
{\renewcommand{\classname}{#1}
 \subsection{Class \code{\classname}} \hypertarget{cls:\classname}
}{%
}

\newenvironment{defclassex}[2]
{\subsection{Class \code{#1}} \hypertarget{cls:#1} 
  \hfill\emph{extends} \class{#2} 
  \renewcommand{\classname}{#1}
  \par
}{%
}

% a constructor synopsis
\newenvironment{classsyn}[1]
{ \parskip0em
  \begin{description}
    \item[\textbf{Constructor} \code{\classname(#1)}] \hfill \\}
{ \end{description} }
% a method definition
\newenvironment{defmeth}[4]
{ \parskip0em
  \begin{description}
   \item[\textbf{Method} \code{#3 #1::#2(#4)}] \hfill \hypertarget{meth:#1::#2} \\ }
{ \end{description}}

\newenvironment{defmeth*}[4]
{ \parskip0em
   \begin{description}
   \item[\text{Method} \code{#1::#2}] \hfille  \\ }
{ \end{description} }

% a function definition
\newenvironment{deffunc}[3]
{ \parskip0em
   \begin{description} 
   \item[\textbf{Function} \code{#2 #1(#3)}] \hfill \hypertarget{func:#1}\\ }
{ \end{description} }

\newenvironment{deffunc*}[3]
{ \parskip0em
  \begin{description}
   \item[\textbf{Function} \code{#2 #1(#3)}] \hfill \\ }
{ \end{description} }

